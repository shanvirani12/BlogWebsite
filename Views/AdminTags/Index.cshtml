@model List<BlogWebsite.Models.Domain.Tag>

<div class="container mt-5">
    <div class="row">
        <div class="col">
            <h1>Tags</h1>
            <div class="col-md-2">
                <p>
                     <a asp-action="Add" class="btn btn-dark">Create New</a>
                </p>
            </div>
            <table id="tagsTable" class="table table-bordered border-4">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col" style="width: 10%">Tags</th>
                        <th scope="col" style="width: 10%">Tag Name</th>
                        <th scope="col" style="width: 5%">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var tag in Model)
                    {
                        <tr>
                            <td>@tag.Name</td>
                            <td>@tag.DisplayName</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@tag.id" class="btn btn-dark">Edit</a> |
                                <a asp-action="Delete" asp-route-id="@tag.id" class="btn btn-danger">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>